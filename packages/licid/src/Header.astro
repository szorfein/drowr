---
import IconMenu from "./assets/icons/menu.svg";
import IconSearch from "./assets/icons/search.svg";
import ButtonIcon from "./components/button/IconStandard.astro";
import ThemeSwitcher from "./components/header/ThemeSwitcher.astro";
import MenusStandard from "./components/menus/Standard.astro";
import Logo from "./Logo.astro";
const NavRoutes = [
  { href: "/posts", name: "Posts" },
  { href: "/posts/themes", name: "Desktop themes" },
];
---

<header class="bg-surface dark:bg-dark-surface sticky top-0 z-30 py-2">
  <nav class="relative container flex flex-wrap items-center justify-between">
    {/* logo */}
    <div class="order-0">
      <Logo />
    </div>

    {/* Nav on lg only */}
    <ul
      class="title-small invisible absolute top-0 left-0 z-[-1] lg:visible lg:relative lg:top-0 lg:z-0 lg:flex lg:h-full"
    >
      <li
        class="relative flex cursor-pointer flex-col items-stretch lg:flex-row"
      >
        <a href="/" class="flex items-center gap-1 py-4 lg:px-6">Home</a>
      </li>
      <li
        class="header-menu-item relative flex cursor-pointer flex-col items-stretch lg:flex-row"
      >
        <MenusStandard name="Resources" items={NavRoutes} />
      </li>
      <li
        class="relative flex cursor-pointer flex-col items-stretch lg:flex-row"
      >
        <a href="/about" class="flex items-center gap-1 py-4 lg:px-6">About</a>
      </li>
    </ul>

    {/* right buttons */}
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0">
      <!-- Search component from app/frontend -->
      <slot />

      <!-- ThemeSwitcher -->
      <ThemeSwitcher />

      <ButtonIcon label="Open navigation menu" classes="lg:hidden">
        <IconMenu
          width={24}
          height={24}
          fill="currentColor"
          class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
        />
      </ButtonIcon>
    </div>
  </nav>
</header>
