---
import "./styles.css";
import Logo from "./Logo.astro";
import IconMenu from "./assets/icons/menu.svg";
import IconSearch from "./assets/icons/search.svg";
import ButtonIcon from "./components/button/IconStandard.astro";
import ThemeSwitcher from "./components/header/ThemeSwitcher.astro";
---

<header class="header sticky top-0 z-30">
  <nav class="navbar container">
    {/* logo */}
    <div class="order-0">
      <Logo />
    </div>
    {/* right buttons */}
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0">
      <ButtonIcon classes="mr-2" label="Search posts">
        <IconSearch
          width={24}
          height={24}
          class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
          fill="none"
        />
      </ButtonIcon>
      <ThemeSwitcher />
      <ButtonIcon label="Open navigation menu">
        <IconMenu
          width={24}
          height={24}
          fill="currentColor"
          class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
        />
      </ButtonIcon>
    </div>
  </nav>
</header>

<style>
  @reference "./styles.css";
  svg {
    color: var(--color-primary);
    @media (prefers-color-scheme: dark) {
      color: var(--color-dark-primary);
    }
  }
  .header {
    @apply bg-surface dark:bg-dark-surface py-2;
  }
  .navbar {
    @apply relative flex flex-wrap items-center justify-between;
  }
</style>
