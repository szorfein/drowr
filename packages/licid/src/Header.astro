---
import Logo from "./Logo.astro";
import IconMenu from "./assets/icons/menu.svg";
import IconSearch from "./assets/icons/search.svg";
import ButtonIcon from "./components/button/IconStandard.astro";
import ThemeSwitcher from "./components/header/ThemeSwitcher.astro";
---

<header class="bg-surface dark:bg-dark-surface sticky top-0 z-30 py-2">
  <nav class="relative container flex flex-wrap items-center justify-between">
    {/* logo */}
    <div class="order-0">
      <Logo />
    </div>
    {/* right buttons */}
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0">
      <ButtonIcon classes="mr-2" label="Search posts">
        <IconSearch
          width={24}
          height={24}
          class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
          fill="none"
        />
      </ButtonIcon>
      <ThemeSwitcher />
      <ButtonIcon label="Open navigation menu">
        <IconMenu
          width={24}
          height={24}
          fill="currentColor"
          class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
        />
      </ButtonIcon>
    </div>
  </nav>
</header>
