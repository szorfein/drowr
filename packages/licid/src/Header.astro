---
import "./styles.css";
import Logo from "./Logo.astro";
import IconDarkMode from "./assets/icons/dark-mode.svg";
import IconMenu from "./assets/icons/menu.svg";
import IconSearch from "./assets/icons/search.svg";
---

<header class="header sticky top-0 z-30">
  <nav class="navbar container">
    {/* logo */}
    <div class="order-0">
      <Logo />
    </div>
    {/* right buttons */}
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0">
      <IconSearch width={24} height={24} fill="currentColor" class="mr-4" />
      <IconDarkMode width={24} height={24} fill="currentColor" class="mr-4" />
      <IconMenu width={24} height={24} fill="currentColor" />
    </div>
  </nav>
</header>

<style>
  @reference "./styles.css";
  svg {
    color: var(--color-primary);
    @media (prefers-color-scheme: dark) {
      color: var(--color-dark-primary);
    }
  }
  .header {
    @apply bg-surface dark:bg-dark-surface py-2;
  }
  .navbar {
    @apply relative flex flex-wrap items-center justify-between;
  }
</style>
