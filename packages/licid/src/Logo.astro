---
import { Image } from "astro:assets";
import logoSrc from "./assets/logoImage.png";

type Props = {
  logoImage?: string;
  logoText?: string;
};

const { logoImage = logoSrc, logoText = "Drowr" } = Astro.props;
---

<a href="/" class="text-onSurface dark:text-dark-onSurface inline-block w-full">
  <Image
    src={logoImage}
    class="inline-block h-15 max-h-full max-w-full"
    width="70"
    height="60"
    alt="Home page"
    loading="eager"
    decoding="async"
    format="webp"
  />
  <span class="headline-small ml-1 align-middle">{logoText}</span>
</a>
