---
import "./styles.css";
import { Image } from "astro:assets";
import logoSrc from "./assets/logoImage.png";

type Props = {
  logoImage?: string;
  logoText?: string;
};

const { logoImage = logoSrc, logoText = "Drowr" } = Astro.props;
---

<a href="/" class="navbar-brand inline-block w-full">
  <Image
    src={logoImage}
    class="inline-block"
    width="70"
    height="60"
    alt="Home page"
    style="height: 60px;"
    loading="eager"
    decoding="async"
    format="webp"
  />
  <span class="headline-small ml-1 align-middle">{logoText}</span>
</a>

<style>
  @reference "./styles.css";
  .navbar-brand {
    @apply text-onSurface dark:text-dark-onSurface;
    image {
      @apply max-h-full max-w-full;
    }
  }
</style>
