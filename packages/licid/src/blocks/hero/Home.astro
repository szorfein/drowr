---
import ButtonFilled from "../../components/button/Filled.astro";
import ButtonStyledGithub from "../../components/button/StyledGithub.astro";
import ButtonStyledRuby from "../../components/button/StyledRuby.astro";
import ButtonStyledMastodon from "../../components/button/StyledMastodon.astro";

interface Props {
  author?: string;
}
const { author } = Astro.props;
---

<section
  class="herohome relative flex items-center justify-center overflow-hidden py-8"
>
  <div class="absolute top-30 left-10 hidden lg:left-10 lg:block">
    <ButtonStyledGithub />
  </div>
  <div class="absolute top-40 left-10 hidden lg:left-10 lg:block">
    <ButtonStyledRuby />
  </div>
  <div class="absolute top-50 left-10 hidden lg:left-10 lg:block">
    <ButtonStyledMastodon />
  </div>
  <div class="max-[900px] z-10 text-center transition-colors ease-out">
    <div class="body-large">Hi, I'm</div>
    <h1 class="text-primary dark:text-dark-primary display-large">
      <a href="/about" label="about">{author}</a>
    </h1>
    <p class="headline-medium py-4">Fullstack JS & Creative coder</p>
    <p class="body-small max-w-150 py-1 md:py-4">
      Audidact, Linux ricer. This is my site, where i share my last Linux
      desktops, notes, and write tutorials...
    </p>
    <div class="mt-8 mb-12 flex flex-wrap justify-center gap-4">
      <!-- button filled -->
      <ButtonFilled text="View projects ->" goto="/" />
      <!-- button outlined -->
      <div
        class="bg-outlineVariant dark:bg-dark-outlineVariant text-onSurfaceVariant dark:text-dark-onSurfaceVariant flex min-h-14 rounded-full"
      >
        <div class="hover:bg-onPrimary/10 dark:hover:bg-dark-onPrimary/10 flex">
          <a class="flex items-center px-6" href="/posts">
            <span class="label-medium">Look posts</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
