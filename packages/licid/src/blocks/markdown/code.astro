<div class="code-markdown">
  <slot />
</div>

<style>
  @reference "../../styles.css";

  .code-markdown {
    h2 {
      @apply text-primary dark:text-dark-primary border-b-primary my-6 border-b;
      @apply font-brand text-[22pt] leading-[28pt] font-normal tracking-[0] not-italic font-stretch-normal;
    }
    pre.astro-code {
      @apply my-6 overflow-auto rounded-lg p-4 wrap-break-word;
      @apply font-plain text-[14pt] leading-[20pt] font-normal tracking-[0] not-italic font-stretch-normal;
    }
    p {
      @apply font-plain text-[14pt] leading-[20pt] font-normal tracking-[0] not-italic font-stretch-normal;
      @apply py-2;
    }
    p a {
      @apply text-primary dark:text-dark-primary border-b-surface dark:border-b-dark-surface hover:border-b-primary dark:hover:border-b-dark-primary border-b border-solid;
    }
    ul {
      @apply py-2 pl-8;
    }
    ul > li {
      @apply list-disc pl-1;
    }
    blockquote {
      @apply border-primary my-2 rounded border-l-4 px-4 py-2;
      p {
        @apply font-plain text-[12pt] leading-[16pt] font-normal tracking-[0.1pt] not-italic font-stretch-normal;
      }
    }
  }
</style>
