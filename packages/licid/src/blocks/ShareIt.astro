---
import FacebookIcon from "../assets/icons/facebook.svg";
import TwitterIcon from "../assets/icons/twitter.svg";
import LinkedinIcon from "../assets/icons/linkedin.svg";
import PinterestIcon from "../assets/icons/pinterest.svg";
const { url, title, description, origin } = Astro.props;
---

<div class="row mt-8">
  <div class="flex items-center">
    <h5 class="label-medium mr-3">Share:</h5>
    <ul class="flex gap-4">
      <li class="inline-block">
        <a
          href={`https://facebook.com/sharer/sharer.php?u=${url}`}
          target="_blank"
          aria-label="facebook share button"
          rel="noreferrer noopener"
        >
          <FacebookIcon
            width={24}
            height={24}
            fill="currentColor"
            class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
          />
        </a>
      </li>
      <li class="inline-block">
        <a
          href={`https://twitter.com/intent/tweet/?text=${title}&amp;url=${url}`}
          target="_blank"
          aria-label="twitter share button"
          rel="noreferrer noopener"
        >
          <TwitterIcon
            width={24}
            height={24}
            fill="currentColor"
            class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
          />
        </a>
      </li>
      <li class="inline-block">
        <a
          href={`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${title}&summary=${description}&source=${origin}`}
          target="_blank"
          aria-label="linkedin share button"
          rel="noreferrer noopener"
        >
          <LinkedinIcon
            width={24}
            height={24}
            fill="currentColor"
            class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
          />
        </a>
      </li>
      <li class="inline-block">
        <a
          href={`https://pinterest.com/pin/create/button/?url=${url}&media=&description=${description}`}
          target="_blank"
          aria-label="pinterest share button"
          rel="noreferrer noopener"
        >
          <PinterestIcon
            width={24}
            height={24}
            fill="currentColor"
            class="fill-onSurfaceVariant dark:fill-dark-onSurfaceVariant"
          />
        </a>
      </li>
    </ul>
  </div>
</div>
