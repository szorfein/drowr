---
import ButtonStyledGithub from "../components/button/StyledGithub.astro";
import ButtonStyledRuby from "../components/button/StyledRuby.astro";
import ButtonStyledMastodon from "../components/button/StyledMastodon.astro";

import ProtonmailIcon from "../assets/icons/protonmail.svg";
---

<div class="relative top-2 mt-6 mb-12 justify-self-center md:top-4">
  <div class="flex w-full items-center justify-center gap-6 py-2 md:py-6">
    <ButtonStyledGithub />
    <ButtonStyledRuby />
    <ButtonStyledMastodon />

    <a
      href="https://mastodon.social/@szorfein"
      target="_blank"
      aria-label="By mail"
    >
      <button
        id="mastodon"
        class="flex h-12 w-12 transform justify-center rounded-full border-2 border-violet-500 bg-white text-2xl text-violet-500 duration-500 hover:-translate-y-3 hover:bg-violet-500 hover:text-white md:h-14 md:w-14 dark:border-violet-400 dark:bg-black dark:text-violet-400 dark:hover:bg-violet-400 dark:hover:text-black"
      >
        <ProtonmailIcon
          width={24}
          height={24}
          class="size-8 place-self-center md:size-10"
          title="Mail"
        />
      </button>
    </a>
  </div>
</div>
