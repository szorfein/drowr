---
const { text, goto = "#", type = "link" } = Astro.props;
---

{
  type === "submit" ? (
    <button
      class="bg-primary dark:bg-dark-primary text-onPrimary dark:text-dark-onPrimary flex min-h-14 rounded-full align-middle"
      type="submit"
    >
      <div class="hover:bg-onPrimary/10 dark:hover:bg-dark-onPrimary/10 flex">
        <div class="flex items-center px-6">
          <span class="label-medium">{text}</span>
        </div>
      </div>
    </button>
  ) : (
    <button class="bg-primary dark:bg-dark-primary text-onPrimary dark:text-dark-onPrimary flex min-h-14 rounded-full">
      <div class="hover:bg-onPrimary/10 dark:hover:bg-dark-onPrimary/10 flex">
        <a class="flex items-center px-6" href={goto}>
          <span class="label-medium">{text}</span>
        </a>
      </div>
    </button>
  )
}
