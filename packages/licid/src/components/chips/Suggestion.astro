---
interface Props {
  name?: string;
  slug?: string;
}

const { name, slug } = Astro.props;
---

<div
  class="bg-surfaceContainerLow dark:bg-dark-surfaceContainerLow label-large text-onSurfaceVariant dark:text-dark-onSurfaceVariant border-outlineVariant dark:border-dark-outlineVariant h-8 w-fit rounded-lg border"
>
  <div
    class="hover:bg-primary/8 dark:hover:bg-dark-primary/8 h-full rounded-lg px-4"
  >
    <a href={`/posts/${slug}`}>{name}</a>
  </div>
</div>
