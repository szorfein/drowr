{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:styles"]
    },
    "build:styles": {
      "outputs": ["dist/**"]
    },
    "build:components": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "with": ["dev:styles"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    }
  }
}
